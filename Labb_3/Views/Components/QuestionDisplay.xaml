<UserControl x:Class="Labb_3.Views.Components.QuestionDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb_3.Views.Components"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="440.451" d:DesignWidth="692.573">
            
    
    <Grid>
        <StackPanel>
            <Label 
                Content="Question:" 
                Margin="15 5 15 5" 
                FontWeight="Bold"/>
            <TextBox 
                Height=" 100" 
                Margin="15 0 15 20"
                />
        </StackPanel>

        <StackPanel VerticalAlignment="Bottom">
            <Label 
                Content="Correct Answer:" 
                Margin="15 25 15 0" 
                FontWeight="Bold"/>
            <TextBox 
                Margin="15 0 15 0"/>
            <Label 
                Content="Incorrect Answer:" 
                Margin="15 0 15 0" 
                FontWeight="Bold"/>
            <TextBox 
                Margin="15 0 15 0"/>
            <Label 
                Content="Incorrect Answer:" 
                Margin="15 0 15 0" 
                FontWeight="Bold"/>
            <TextBox 
                Margin="15 0 15 0"/>
            <Label 
                Content="Incorrect Answer:" 
                Margin="15 0 15 0" 
                FontWeight="Bold"/>
            <TextBox 
                Margin="15 0 15 25"/>
        </StackPanel>

    </Grid>
</UserControl>
