<UserControl x:Class="Labb_3.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb_3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White"
             FontSize="20">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label 
            Content="{Binding TimeRemaining}" 
            Grid.Row="0" 
            Grid.Column="1" 
            HorizontalAlignment="Right" 
            Margin="10"
            FontWeight="SemiBold"/>
        
        <StackPanel 
            Grid.Row="1" 
            Grid.ColumnSpan="2" 
            Margin="0 80 0 40" 
            HorizontalAlignment="Center">
            <TextBlock 
                Text="{Binding CurrentQuestionText}" 
                FontSize="28"
                FontWeight="SemiBold"
                TextAlignment="Center"
                TextWrapping="Wrap"
                Width="400"/>
            <TextBlock 
                Text="{Binding QuestionProgressText}" 
                Margin="0 10 0 0"
                FontSize="16"
                TextAlignment="Center"/>
        </StackPanel>
        
        <ItemsControl 
            Grid.Row="2" 
            Grid.ColumnSpan="2" 
            ItemsSource="{Binding CurrentAnswers}" 
            Margin="0 0 0 40">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button 
                        HorizontalAlignment="Center" 
                        Width="320" 
                        Height="110" 
                        Margin="35 10"
                        Command="{Binding DataContext.SelectAnswerCommand, 
                        RelativeSource={RelativeSource 
                        AncestorType=UserControl}}"
                        CommandParameter="{Binding}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                    <ContentPresenter
                                        Margin="{TemplateBinding Padding}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Content" Value="{Binding}"/>
                                <Setter Property="IsEnabled" 
                                    Value="{Binding DataContext.AreAnswersEnabled,
                                    RelativeSource={RelativeSource 
                                    AncestorType=UserControl}}"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock 
                                                Text="{Binding Text}"
                                                TextAlignment="Center"
                                                TextWrapping="Wrap"
                                                FontSize="18"
                                                Margin="4"/>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding State}" Value="Correct">
                                        <Setter Property="Background" Value="#FF6BC46B"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding State}" Value="Incorrect">
                                        <Setter Property="Background" Value="#FFE57373"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel 
            Grid.Row="3" 
            Grid.ColumnSpan="2"
            Margin="10 20"
            HorizontalAlignment="Center">
            <Button 
                Content="Restart Quiz"
                Width="160"
                Margin="0 0 0 10"
                Visibility="{Binding IsQuizFinished, 
                Converter={StaticResource BooleanToVisibilityConverter}}"
                Command="{Binding RestartQuizCommand}"/>
            <TextBlock 
                Text="{Binding StatusMessage}" 
                FontSize="16"
                FontWeight="SemiBold"
                TextAlignment="Center"
                Visibility="{Binding IsStatusMessageVisible, 
                Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
