<UserControl x:Class="Labb_3.Views.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb_3.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:components="clr-namespace:Labb_3.Views.Components"
             
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500"
             Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label 
                Content="{Binding ActivePack.Name}" 
                Margin="5"
                FontWeight="Bold"
                Grid.Column="0"/>
            
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                <Button 
                    Margin="5" 
                    Height="20" 
                    Width="20" 
                    HorizontalAlignment="Right"
                    ToolTip="Options"
                    Command="{Binding OpenPackOptionsCommand}">
                    <fa:IconBlock Icon="Sliders" />
                </Button>
                <Button 
                    Margin="5" 
                    Height="20" 
                    Width="20" 
                    HorizontalAlignment="Right"
                    ToolTip="Add Question"
                    Command="{Binding AddQuestionCommand}">
                    <fa:IconBlock Icon="Plus" />
                </Button>
                <Button 
                    Margin="5" 
                    Height="20" 
                    Width="20" 
                    HorizontalAlignment="Right"
                    ToolTip="Remove Question"
                    Command="{Binding RemoveQuestionCommand}">
                    <fa:IconBlock Icon="Minus" />
                </Button>
            </StackPanel>
            
        </Grid>
        <ListBox x:Name="QuestionListBox" Grid.Row="1" Grid.Column="0"
				 ItemsSource="{Binding ActivePack.Questions}"
				 SelectedItem="{Binding ActivePack.SelectedQuestion, Mode=TwoWay}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Margin="2">
						<Label Content="Question" FontWeight="Bold"/>
						<TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
        </ListBox>

        <components:QuestionDisplay 
            Grid.Column="1" 
            Grid.Row="0" 
            Grid.RowSpan="2"
            DataContext="{Binding ActivePack.SelectedQuestion}"/>




    </Grid>
   
</UserControl>
