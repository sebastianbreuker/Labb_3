<UserControl x:Class="Labb_3.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb_3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White"
             FontSize="20"
>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="155"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label 
            Content="30" 
            Grid.Row="0" 
            Grid.Column="1" 
            HorizontalAlignment="Right" 
            Margin="5"
            FontWeight="SemiBold"/>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="200 30 200 0">
            <TextBlock 
                Text="Vad är 10 gånger 10?" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                FontWeight="SemiBold" />
            <Label 
                Content="Fråga 1" 
                HorizontalAlignment="Center"/>
        </StackPanel>
        
        <WrapPanel Margin="50 0 50 0" Grid.Row="3" Grid.ColumnSpan="2">
            <Button 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" Width="280" 
                Height="100" 
                Margin="50 10 20 10" />
            <Button 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                Width="280" Height="100" 
                Margin="20 10 0 10" />
            <Button 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                Width="280" Height="100" 
                Margin="50 10 20 10" />
            <Button 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                Width="280" 
                Height="100" 
                Margin="20 10 20 10" />
        </WrapPanel>
    </Grid>
</UserControl>
