<Window x:Class="Labb_3.PackImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Import Questions"
        Height="280"
        Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Category:" FontWeight="Bold"/>
            <ComboBox Margin="0 4 0 10"
                      ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                      DisplayMemberPath="Name" />

            <TextBlock Text="Difficulty:" FontWeight="Bold"/>
            <ComboBox Margin="0 4 0 10"
                      ItemsSource="{Binding DifficultyOptions}"
                      SelectedItem="{Binding SelectedDifficulty, Mode=TwoWay}"
                      DisplayMemberPath="DisplayName"/>

            <TextBlock Text="Number of Questions:" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0 4 0 10" VerticalAlignment="Center">
                <Slider Width="200"
                        Minimum="1"
                        Maximum="50"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        Value="{Binding Amount, Mode=TwoWay}"/>
                <TextBlock Margin="8 0 0 0" HorizontalAlignment="Right">
                    <Run Text="{Binding Amount}"/>
                    <Run Text=" questions"/>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 12 0 0">
            <Button Content="Import"
                    Width="80"
                    Margin="0 0 6 0"
                    Command="{Binding ImportCommand}"/>
            <Button Content="Cancel"
                    Width="80"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>

