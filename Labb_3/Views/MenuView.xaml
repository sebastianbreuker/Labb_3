<UserControl x:Class="Labb_3.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb_3.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Menu>
        <MenuItem Header="_File">
            <MenuItem 
                Header="New Question Pack" 
                Icon="{fa:Icon File}"
            />
            <MenuItem 
                Header="Select Question Pack" 
                Icon="{fa:Icon FolderOpen}" />
            <MenuItem
                Header="Delete Question Pack" 
                Icon="{fa:Icon FolderMinus}" />
            <Separator/>
            <MenuItem 
                Header="_Import Question" 
                Icon="{fa:Icon CloudArrowDown}" 
                InputGestureText="Ctrl+I"
            />
            <Separator/>
            <MenuItem 
                Header="E_xit" 
                Icon="{fa:Icon DoorOpen}" 
                InputGestureText="Alt+F4"
            />
        </MenuItem>
        <MenuItem Header="_Edit">
            <MenuItem 
                Header="Add Question" 
                Icon="{fa:Icon Plus}" 
                InputGestureText="Insert" 
            />
            <MenuItem 
                Header="Remove Question" 
                Icon="{fa:Icon Minus}" 
                InputGestureText="Delete" 
            />
            <MenuItem 
                Header="Pack Options" 
                Icon="{fa:Icon Sliders}" 
                InputGestureText="Ctrl+O"
            />
            <!--<MenuItem Header="Set PackName" Command="{Binding PlayerViewModel.SetPackNameCommand}" />-->
        </MenuItem>
        <MenuItem Header="_View">
            <MenuItem 
                Header="Play" 
                Icon="{fa:Icon Play}" 
                InputGestureText="Ctrl+P"
            />
            <MenuItem 
                Header="Edit" 
                Icon="{fa:Icon Gears}" 
                InputGestureText="Ctrl+E"
            />
            <MenuItem 
                Header="Fullscreen" 
                Icon="{fa:Icon Expand}" 
                InputGestureText="Alt+Enter"
            />
        </MenuItem>
    </Menu>
</UserControl>
